<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.nadavrozen.myfirebaseauth.ProfileActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout"
        android:weightSum="1">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
          android:src="@drawable/logosecyellow"
            android:layout_weight="0.61" />
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="54dp"
            android:text="FrienDeliver"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/yellow_header"
            android:fontFamily="sans-serif-light"
            android:textStyle="bold"
            android:textColorHighlight="@color/gray"
            />

        <Button
            android:layout_marginTop="40dp"
            android:text="Looking for a deliverer"
            android:textSize="18dp"
            android:id="@+id/lookForButton"
            android:layout_gravity="center_horizontal"
            android:textColor="#FFFFFF"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonshape"
            />

        <Button
            android:layout_marginTop="20dp"
            android:text="Want to be a deliverer"
            android:textSize="18dp"
            android:id="@+id/deliverButton"
            android:layout_gravity="center_horizontal"
            android:textColor="#FFFFFF"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonshape"
            />

        <Button
            android:layout_marginTop="100dp"
            android:text="Logout"
            android:id="@+id/buttonLogOut"
            android:layout_gravity="center_horizontal"
            android:textColor="#FFFFFF"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/buttonshape"
            />

    </LinearLayout>


</FrameLayout>
